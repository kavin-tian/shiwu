<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="1dp">

    <com.lihang.ShadowLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:hl_cornerRadius="5dp"
        app:hl_shadowColor="#4a000000"
        app:hl_shadowLimit="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:orientation="vertical">

            <!--  <com.example.shiwu.views.FilletImageView
                  android:id="@+id/image_view"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:scaleType="fitXY"
                  android:src="@mipmap/slide0"
                  app:filletImageRadius="5dp"
                  app:topLeftRightCorner="true" />-->

            <ImageView
                android:id="@+id/image_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="上面是圆角图片\n下面是文字\nbababababa"

                android:textColor="#000" />
        </LinearLayout>
    </com.lihang.ShadowLayout>

</LinearLayout>



